// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// defining the properties of each document

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  // the commands at the end of the line are required for IDs -> mapping
  username  String   @unique
  name String
  // @unique attribute -> field is set to be unique in the db, will throw an error if it already exists
  email     String   @unique   
  entryDate DateTime
  numberOfThoughts Int

  // default? required? related? min/max length?
}